<h1><%= @task.title %></h1>
<h2>Description:</h2>
<p><%= @task.details %></p>
<h2>Completed?</h2>
<p><%= @task.completed %></p>
<h2>Delete:</h2>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Edit", edit_task_path %></p>
<p><%= link_to "Back to menu", tasks_path %></p>
