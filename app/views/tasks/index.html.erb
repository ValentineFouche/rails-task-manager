<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>

  <li>
<% if task.completed == true %>
    <i class="fas fa-solid fa-check"></i>
    <%= link_to task.title, task_path(task) %>
    <% else %>
    <i class="fas fa-solid fa-square"></i>
    <%= link_to task.title, task_path(task) %>
  </li>
  <% end %>
  <% end %>
</ul>
<p><%= link_to "Add a new task", new_task_path %></p>
